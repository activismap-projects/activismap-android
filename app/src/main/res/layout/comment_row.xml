<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.entropy_factory.activismap.widget.ProfileView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:showUsername="false"
                android:id="@+id/profile"/>

            <com.entropy_factory.activismap.view.FontTextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="regular"
                android:textSize="12dp"
                android:text="Jue, 25 de Oct, a las 13:30"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_alignBottom="@+id/profile"/>
        </RelativeLayout>

        <com.entropy_factory.activismap.view.FontTextView
            android:id="@+id/comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font="regular"
            android:text="Esto es un comentario hecho por un usuario anonimo desde la aplicaciÃ³n"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>